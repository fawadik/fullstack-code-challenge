{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "backend/types/*"]
    }
  },
  "resolve": {
    "extensions": [".js", ".jsx", ".ts", ".tsx", ".json", ".css", ".scss"],
    "modules": ["src", "node_modules"]
  },
  "include": ["backend/**/*"]
}
